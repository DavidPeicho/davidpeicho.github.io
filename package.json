{
  "name": "david-peicho-blog",
  "version": "1.0.0",
  "author": "David Peicho",
  "description": "David Peicho blog containing Computer Graphics related posts",
  "license": "MIT",
  "scripts": {
    "dev": "hugo server",
    "dev:js": "cross-env NODE_ENV=development webpack -w",
    "build:js": "cross-env NODE_ENV=production webpack",
    "build": "npm run build:js && hugo -d ./dist",
    "lint": "eslint ./src",
    "format": "prettier ./ --write",
    "deploy": "./scripts/publish.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "devDependencies": {
    "cross-env": "^7.0.2",
    "eslint": "^7.8.1",
    "husky": "^4.2.5",
    "lint-staged": ">=10",
    "prettier": "^2.0.5",
    "raw-loader": "^4.0.1",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "worker-loader": "^3.0.2"
  },
  "dependencies": {
    "three": "^0.120.1"
  },
  "browserslist": [
    "last 2 version",
    "> 2%"
  ],
  "lint-staged": {
    "*.{css,scss}": "prettier --write"
  }
}
